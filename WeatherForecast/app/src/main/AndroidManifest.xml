<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weatherforecast">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/weather_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/weather_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherForecast"
        android:usesCleartextTraffic="true">
        <activity android:name=".DailyActivity"/>
        <activity android:name=".HourActivity" />
        <activity android:name=".CurrentActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>